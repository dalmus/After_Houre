<h1>Today's Beans</h1>

<ul>
    <% @beans.each do |bean| %>
        <li>
            <strong> <%= bean.name %> </strong> - <%= bean.roast %>
          - <%= link_to "Delete this bean!", bean, method: :delete, data: { confirm: "Are you sure you want to delete this bean?"} %>
          - <%= link_to "More info", bean_path(bean) %>
        </li>
    <% end %>
</ul>
